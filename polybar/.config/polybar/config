[colors]
background = #8C4C5B5C
background-alt = #9c87ed
foreground = #d8d8c0
foreground-alt = #
primary = #FFFFFF
secondary = #f2cd4f
alert = #ef4335
color1 = #887479
color2 = #95867F
color3 = #55645F
color4 = #778370


[bar/topbar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
offset-x = 0
offset-y = -1 
radius = 0
fixed-center = true 

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = hack:fontformat=truetype:size=8;1
font-1 = optien:fontformat=truetype:size=9;1
font-2 = Monofur Nerd Font:fontformat=truetype:size=10;0

;modules-left = powermenu cpu memory bspwm moc
modules-left = bspwm moc
modules-center = date 
modules-right = redshift alsa wlan eth battery

tray-postin = none
;tray-position = right 
tray-padding = 0
tray-background = ${colors.background} 
tray-offset-x = 4 

;wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

label-focused = %{T2}%name%%{T-}
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.background-alt}
label-focused-padding = 2

;label-occupied = %{T2}%{F#E0A458}%name%%{F-}%{T-}
lable-occupied = %{T2}%name%%{T-}
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground-alt}

label-urgent = %{T2}%name%!%{T-}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %{T2}%index%%{T-}
label-empty-foreground = ${colors.background-alt}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.background-alt} 
label = [%percentage:2%%]

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.background-alt} 
label = [%percentage_used%%]

[module/wlan]
type = internal/network
interface = wlp2s0 
interval = 3.0

format-connected = <label-connected> 
format-connected-underline = ${colors.background-alt} 
label-connected = %{T2}%essid%%{T-} [%signal%%]
label-signal = [%signal%%]

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = ${self.label-signal} 
ramp-signal-0-foreground = ${colors.alert}
ramp-signal-1-foreground = ${colors.secondary}
ramp-signal-2-foreground = ${colors.primary}

[module/eth]
type = internal/network
interface = eth1
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = %m%d%y
date-alt = " %Y-%m-%d"

time = %I:%M
time-alt = %H:%M:%S

;format-prefix =   
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = ${colors.foreground-alt} 

label = [ %date% %time% ]

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/alsa]
type = internal/alsa

format-volume = <label-volume>
format-volume-underline = ${colors.background-alt}
label-volume = %{T2}Vol%{T-} [%percentage%%]
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.alert}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <label-charging>
format-charging-underline = ${colors.primary} 
label-charging = %{T2}Chr%{T-} [%percentage%%]

format-discharging = <label-discharging>
format-discharging-underline = ${colors.secondary}
label-discharging = %{T2}Bat%{T-} [%percentage%%]

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.primary} 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1-foreground = ${colors.secondary}
ramp-capacity-2-foreground = ${colors.primary}
;ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.alert}
label-open-font = 6
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-close-font = 6
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = %{T2}reboot%{T-}
menu-0-0-exec = sudo reboot 
menu-0-1 = %{T2}power off%{T-}
menu-0-1-exec = sudo poweroff 

[module/updates-void]
type = custom/script
exec-if = ~/.config/polybar/isconnected.fish
exec = ~/.config/polybar/updates-void.fish
interval = 120

format = <label>
format-foreground = ${colors.alert}

[module/moc]
type = custom/script
exec = ~/.config/polybar/moc.fish
;interval = 10
tail = true

format = <label>
format-foreground = ${colors.foreground-alt}
format-prefix = "[ "
format-suffix = " ]"

label = %output:0:29:...%

[module/redshift]
type = custom/script
exec = ~/.config/polybar/redshift.fish
interval = 60

format = %{T2}<label>%{T-}
format-foreground = ${colors.secondary}

[module/dropbox]
type = custom/script
exec-if = ~/.config/polybar/isconnected.fish
exec = ~/.config/polybar/gdrop
interval = 10

format = <label>
format-foreground = ${colors.foreground-alt}

label-font = 0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 2
margin-bottom = 2

